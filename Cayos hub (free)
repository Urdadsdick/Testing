if game.PlaceId == 11177482306 then
    -- Load Orion UI
    local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

    -- Create Main Window
    local Window = OrionLib:MakeWindow({
        Name = "Goated Hub - Street Wars 2",
        HidePremium = false,
        SaveConfig = true,
        ConfigFolder = "GoatedHub"
    })

    -- Initialize Variables
    local _G = {
        autoFarm = false,
        autoPickup = false,
        godMode = false,
        espEnabled = false,
        walkSpeed = 16,
        infiniteAmmo = false,
        flyEnabled = false
    }

    -- Player Tab
    local playerTab = Window:MakeTab({
        Name = "Player",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    -- Walk Speed Slider and Input Box
    playerTab:AddSlider({
        Name = "Walk Speed",
        Min = 16,
        Max = 100,
        Default = 16,
        Increment = 1,
        Callback = function(value)
            _G.walkSpeed = value
            local humanoid = game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
            if humanoid then
                humanoid.WalkSpeed = value
            end
        end
    })

    playerTab:AddTextbox({
        Name = "Set Walk Speed",
        Default = tostring(_G.walkSpeed),
        TextDisappear = false,
        Callback = function(value)
            local speed = tonumber(value)
            if speed then
                _G.walkSpeed = speed
                local humanoid = game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
                if humanoid then
                    humanoid.WalkSpeed = speed
                end
            end
        end
    })

    -- God Mode Toggle (Updated)
    playerTab:AddToggle({
        Name = "God Mode",
        Default = false,
        Callback = function(state)
            _G.godMode = state
            local player = game.Players.LocalPlayer

            -- Function to apply God Mode
            local function enableGodMode()
                while _G.godMode do
                    local character = player.Character or player.CharacterAdded:Wait()
                    local humanoid = character:FindFirstChild("Humanoid")

                    if humanoid then
                        humanoid.MaxHealth = math.huge
                        humanoid.Health = math.huge

                        -- Restore health if altered
                        if humanoid.Health < humanoid.MaxHealth then
                            humanoid.Health = math.huge
                        end
                    end

                    -- Destroy damage scripts
                    for _, descendant in pairs(character:GetDescendants()) do
                        if descendant:IsA("Script") or descendant:IsA("LocalScript") then
                            if string.find(descendant.Name:lower(), "damage") or string.find(descendant.Source:lower(), "damage") then
                                descendant:Destroy()
                            end
                        end
                    end

                    -- Restore custom health attributes, if applicable
                    local healthAttribute = character:FindFirstChild("Health")
                    if healthAttribute then
                        healthAttribute.Value = math.huge
                    end

                    wait(0.1)
                end
            end

            -- Handle toggling God Mode on/off
            if _G.godMode then
                coroutine.wrap(enableGodMode)()
            end
        end
    })

    -- Fly and Unfly Buttons
    playerTab:AddButton({
        Name = "Fly",
        Callback = function()
            local player = game.Players.LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            local root = character:FindFirstChild("HumanoidRootPart")

            if root and not _G.flyEnabled then
                _G.flyEnabled = true
                local bodyVelocity = Instance.new("BodyVelocity", root)
                bodyVelocity.MaxForce = Vector3.new(9e9, 9e9, 9e9)
                bodyVelocity.Velocity = Vector3.zero

                game:GetService("UserInputService").InputBegan:Connect(function(input, gameProcessed)
                    if gameProcessed then return end
                    if input.KeyCode == Enum.KeyCode.Space then
                        bodyVelocity.Velocity = Vector3.new(0, 50, 0)
                    elseif input.KeyCode == Enum.KeyCode.LeftShift then
                        bodyVelocity.Velocity = Vector3.new(0, -50, 0)
                    end
                end)
            end
        end
    })

    playerTab:AddButton({
        Name = "Unfly",
        Callback = function()
            _G.flyEnabled = false
            local player = game.Players.LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            local root = character:FindFirstChild("HumanoidRootPart")

            if root then
                for _, obj in pairs(root:GetChildren()) do
                    if obj:IsA("BodyVelocity") then
                        obj:Destroy()
                    end
                end
            end
        end
    })

    -- Other tabs and features remain unchanged
    -- Farming, ESP, Combat, Trolling, etc.

    -- Finish UI Setup
    OrionLib:Init()
end
