-- Add Auto Job Farm (Box Collection and Selling) Tab
local jobFarmTab = Window:MakeTab({
    Name = "Auto Farm",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Global variable for autofarming state
_G.autoJobFarm = false

-- Function to start auto farming job (box collection)
local function startAutoFarmJob()
    _G.autoJobFarm = true
    while _G.autoJobFarm do
        -- Find box and job location
        local box = workspace:FindFirstChild("Box")  -- Modify this based on actual item name
        local jobLocation = workspace:FindFirstChild("JobLocation")  -- Modify this based on the job location
        
        if box and jobLocation then
            -- Collect box
            firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, box, 0)  -- Simulate touch
            firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, box, 1)  -- Simulate pickup
            
            -- Wait for box collection, then sell it at job location
            wait(0.5)
            firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, jobLocation, 0)  -- Simulate interaction
            firetouchinterest(game.Players.LocalPlayer.Character.HumanoidRootPart, jobLocation, 1)  -- Simulate selling
            
            print("Auto Farm: Collected and sold a box.")
        end
        wait(1)  -- Adjust the wait time based on how fast you want to farm
    end
end

-- Function to stop auto farming
local function stopAutoFarmJob()
    _G.autoJobFarm = false
    print("Auto Farm: Stopped.")
end

-- Add a toggle in the UI for Auto Farm
jobFarmTab:AddToggle({
    Name = "Enable Auto Job Farm",
    Default = false,
    Callback = function(state)
        if state then
            startAutoFarmJob()
        else
            stopAutoFarmJob()
        end
    end
})

-- Add a button to start the auto farm job manually if needed
jobFarmTab:AddButton({
    Name = "Start Auto Job Farm",
    Callback = function()
        startAutoFarmJob()
    end
})

jobFarmTab:AddButton({
    Name = "Stop Auto Job Farm",
    Callback = function()
        stopAutoFarmJob()
    end
})

-- Now we include all the other features that were in your original script.
-- Make sure the following tabs and features are added below:

-- Player Tab (Walk Speed, Fly, etc.)
local playerTab = Window:MakeTab({
    Name = "Player",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

playerTab:AddSlider({
    Name = "Walk Speed",
    Min = 16,
    Max = 100,
    Default = _G.speed,
    Callback = function(value)
        _G.speed = value
        local player = game.Players.LocalPlayer
        local humanoid = player.Character and player.Character:FindFirstChild("Humanoid")
        if humanoid then
            humanoid.WalkSpeed = _G.speed
        end
    end
})

playerTab:AddButton({
    Name = "Fly",
    Callback = function()
        startFly()
    end
})

playerTab:AddButton({
    Name = "Unfly",
    Callback = function()
        stopFly()
    end
})

-- Guns Tab (Auto Pickup, etc.)
local gunTab = Window:MakeTab({
    Name = "Guns",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

gunTab:AddToggle({
    Name = "Enable Auto Gun Pickup",
    Default = false,
    Callback = function(state)
        if state then
            startAutoPickup()
        else
            stopAutoPickup()
        end
    end
})

-- Useful Tab (God Mode, One Punch)
local usefulTab = Window:MakeTab({
    Name = "Useful",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

usefulTab:AddToggle({
    Name = "God Mode",
    Default = false,
    Callback = function(state)
        if state then
            enableGodMode()
        else
            disableGodMode()
        end
    end
})

usefulTab:AddToggle({
    Name = "One Punch",
    Default = false,
    Callback = function(state)
        _G.onePunch = state
        enableOnePunch()
    end
})

-- Misc Tab (Auto Mop Farm, Hitbox Expander, etc.)
local miscTab = Window:MakeTab({
    Name = "Misc",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

miscTab:AddToggle({
    Name = "Auto Mop Farm",
    Default = false,
    Callback = function(state)
        if state then
            startAutoMopFarm()
        else
            stopAutoMopFarm()
        end
    end
})

miscTab:AddToggle({
    Name = "Enable Hitbox Expander",
    Default = false,
    Callback = function(state)
        if state then
            -- Function to expand the player's hitbox to 25 studs
            game.Players.LocalPlayer.Character.Humanoid.HipWidth = 25
            game.Players.LocalPlayer.Character.Humanoid.HipHeight = 25
        else
            -- Reset to default hitbox size
            game.Players.LocalPlayer.Character.Humanoid.HipWidth = 2
            game.Players.LocalPlayer.Character.Humanoid.HipHeight = 2
        end
    end
})

